<% include ../partials/header %>

<div class="container">
    <div class="row">
        <header class="jumbotron">
            <h1 style="text-align: center">Add a comment to <%= foundCampground.name %></h1>
        </header>
        <div style="width: 30%; margin: 10px auto;">
        <form action="/campgrounds/<%=foundCampground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Write something" name="comment[text]"></input>
            </div>
             <div class="form-group">
                <input class="form-control" type="text" placeholder="Your name" name="comment[author]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-block btn-primary">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/:<%=foundCampground._id%>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>