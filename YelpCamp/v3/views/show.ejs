<% include partials/header %>

<h1><%= foundCampground.name %></h1>
<img src="<%= foundCampground.image %>"></img>
<p><%= foundCampground.description %></p>
<p>Comments:</p>
<% foundCampground.comments.forEach(function(comment) { %>
    <p><span class="glyphicon glyphicon-user"> </span><strong><%= comment.author %></strong></p>
    <p><%= comment.text %></p>
<% }); %>
<a href="/campgrounds/<%= foundCampground._id %>" class="btn btn-primary">Add new comment</a>

<% include partials/footer %>